/* 地址的view */
.addressView{
  width: 100%;
  height: 70px;
  margin-top: 0.5em;
  margin-bottom: 0.5em;
  box-shadow: 10px 10px 5px #888888;
  position: relative;
}
.userName{
  display: inline-block;
  position: absolute;
  font-size: 14px;
  top: 12px;
  left: 12px;
}
.userTel{
  display: inline-block;
  position: absolute;
  font-size: 14px;
  left: 64px;
  top: 12px;
}
.userAddress{
  display: inline-block;
  position: absolute;
  font-size: 14px;
  top: 37px;
  left: 12px;
}

/* 商品列表样式 */
