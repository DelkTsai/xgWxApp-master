/* 余额框样式 */
.blaceView{
  margin-top: 5vh;
  position: relative;
  width: 100%;
  box-shadow: 0px 5px 5px #888888;
  height: 130px;
}
.blanceText{
  position: absolute;
  left: 31px;
  top: 27px;
  font-size: 14px;
  color:#7d7d7d;
}
.blance{
  position: absolute;
  left: 23px;
  top: 40px;
  font-size: 44px;
  color: #000;
}
/* 提示的样式 */
.tip{
  margin-top: 2vh;
  margin-left: 2vw;
  font-size: 12px;
  color:#7d7d7d;
}
/* 充值按钮 */
.chageView{
  width: 100%;
  height: 42px;
  position: absolute;
  text-align: center;
  left: 0px;
  bottom: 17px;
  background-color: #fff;
}
.chargeButton{
  width: 80%;
  background-color: #000;
  color: #fff;
  height: 100%;
  font-size: 14px;
}