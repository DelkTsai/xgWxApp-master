/* pages/personal/orderDetailPay.wxss */
/* 分割线 */
.fenge{
  width: 100%;
  height: 5px;
  background-color: #F7F7F7;
}
/* 地址 */
.addressView{
  width: 100%;
  height: 70px;
  position: relative;
  margin-top: 5px;
  margin-bottom: 5px;
}
.addressName{
  position: absolute;
  font-size: 14px;
  top: 12px;
  left: 12px;
}
.addressTel{
  position: absolute;
  font-size: 14px;
  left: 64px;
  top: 12px;
}
.addressAddress{
  position: absolute;
  top: 37px;
  font-size: 14px;
  left: 12px;
}
/* 商品列表 */
.goodsItem{
  position: relative;
  width: 100%;
  height: 107px;
  margin-top: 5px;
  margin-bottom: 5px;
}
.goodItemImage{
  position: absolute;
  width: 107px;
  height: 107px;
  top: 0px;
  left: 12px;
  box-shadow: 0px 2.5px 1px #7d7d7d;
}
.goodImage{
  width: 100%;
  height: 100%;
}
.goodItemName{
  position: absolute;
  font-size: 15px;
  left: 125px;
  top: 10px;
}
.goodItemPrice{
  position: absolute;
  font-size: 14px;
  color: #FE3131;
  left: 122px;
  top: 31px;
}
/* 商品属性 */
.attrView{
  position: absolute;
  left: 141px;
  top: 67px;
}
.fontStyle{
  font-size: 13px;
  color:#7d7d7d;
  display: inline;
}
.imageStyle{
  width: 13px;
  height: 13px;
  border-radius: 13px; 
}
.attrImageView{
  width: 13px;
  height: 13px;
}
.forItemView{
  height: 14px;
  width: 40px;
  float: left;
}
/* 购买数量 */
.viewCount{
  font-size: 13px;
  display: inline-block;
}
/* 商品总价 优惠券 余额 */
.sumView{
  width: 100%;
  height: 120px;
  position: relative;
  margin-top: 5px;
  margin-bottom: 5px;
}
.itemView{
  position: relative;
  width: 100%;
  height: 40px;
}
.itemText{
  position: absolute;
  left: 20px;
  top: 10px;
  font-size: 14px;
}
.itemValue{
  position: absolute;
  top:10px;
  right: 20px;
  font-size: 14px;
  color: #7d7d7d; 
}
/* 实付款 */
.payView{
  position: relative;
  width: 100%;
  height: 50px;
}
.payText{
  position: absolute;
  font-size: 14px;
  top: 15px;
  right: 85px;
}
.payValue{
  position: absolute;
  font-size: 14px;
  color: #FE3131;
  top: 15px;
  right: 20px; 
}