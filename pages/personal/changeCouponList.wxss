/* changeCouponList.wxss */

/* 循环的每一个item的样式 */

.couponListView {
  width: 100%;
  position: relative;
  height: 105px;
  box-shadow: 0px 2px 5px #dddddd;
  margin-top: 1em;
}

/* 优惠券标题底图 */

.itemRightImage {
  width: 80px;
  height: 50px;
  position: absolute;
  left: 12px;
  top: 28px;
}

/* 优惠券名称 */

.couponName {
  color: #fff;
  font-size: 12px;
  position: absolute;
  left: 31px;
  top: 38px;
  width: 50px;
  height: 30px;
}

/* 优惠券面值 */

.couponPrice {
  position: absolute;
  font-size: 15px;
  color: #000;
  left: 117px;
  top: 20px;
}

/* 优惠券有效期 */

.couponDate {
  position: absolute;
  font-size: 13px;
  color: #7d7d7d;
  left: 117px;
  top: 47px;
}

/* 兑换所需要的积分 */

.couponChange {
  position: absolute;
  font-size: 13px;
  color: #7d7d7d;
  left: 117px;
  top: 66px;
}

/* 下方剩余积分 */

.bottomView {
  position: absolute;
  bottom: 20px;
  text-align: center;
  width: 100%;
}

.restScore {
  width: 50%;
  background-color: #000;
  color: #fff;
  font-size: 13px;
  border-radius: 10px;
  margin-bottom: 10px;
}

/* 弹窗样式 */
.btn { 
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #000;  
  color: #fff;  
} 
   
/*mask*/ 
.drawer_screen { 
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000000;  
  opacity: 0.7;  
  overflow: hidden;  
} 
   
/*content*/ 
.drawer_box { 
  width: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 35%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  /* margin: -150px 50rpx 0 50rpx;   */
  border-radius: 3px;  
  background-color: #FFFFFF;
} 
   
.drawer_title{ 
  padding:15px;  
  font: 20px "microsoft yahei";  
  text-align: center; 
  color: #000000; 
} 
.drawer_content { 
  /* height: 210px;   */
  overflow-y: scroll; /*超出父盒子高度可滚动*/ 
} 
   
.btn_ok{ 
  padding: 10px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #3CC51F;  
  background-color: #FFFFFF;
} 
   
