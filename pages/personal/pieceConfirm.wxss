/* 弹窗样式 */
.btn { 
  width: 80%;  
  padding: 20rpx 0;  
  border-radius: 10rpx;  
  text-align: center;  
  margin: 40rpx 10%;  
  background: #000;  
  color: #fff;  
} 
   
/*mask*/ 
.drawer_screen { 
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000000;  
  opacity: 0.7;  
  overflow: hidden;  
} 
   
/*content*/ 
.drawer_box { 
  width: 100%;  
  overflow: hidden;  
  position: fixed;  
  top: 35%;  
  left: 0;  
  z-index: 1001;  
  background: #FAFAFA;  
  /* margin: -150px 50rpx 0 50rpx;   */
  border-radius: 3px;  
  background-color: #000000;
} 
   
.drawer_title{ 
  padding:15px;  
  font: 20px "microsoft yahei";  
  text-align: center; 
  color: #000000; 
} 
.drawer_content { 
  /* height: 210px;   */
  overflow-y: scroll; /*超出父盒子高度可滚动*/ 
} 
   
.btn_ok{ 
  padding: 10px;  
  font: 20px "microsoft yahei";  
  text-align: center;  
  border-top: 1px solid #E8E8EA;  
  color: #3CC51F;  
  background-color: #FFFFFF;
} 
   
