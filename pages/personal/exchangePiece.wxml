<!--pages/personal/exchangePiece.wxml-->
<!-- 上面加号图片 -->
<view class='topView'>
  <image src='{{midImage}}' class='topImageFang' data-invite-code='{{inviteCode}}' bindtap='{{goToChipList}}'></image>
  <!-- 遮罩层 -->
  <view class='tongMask maskst' style='{{maskst}}' data-invite-code='{{inviteCode}}' bindtap='{{goToChipList}}'></view>
  <view class='tongMask masknd' style='{{masknd}}' data-invite-code='{{inviteCode}}' bindtap='{{goToChipList}}'></view>
  <view class='tongMask maskrd' style='{{maskrd}}' data-invite-code='{{inviteCode}}' bindtap='{{goToChipList}}'></view>
  <view class='tongMask maskth' style='{{maskth}}' data-invite-code='{{inviteCode}}' bindtap='{{goToChipList}}'></view>
</view>
<!-- 商品名称 -->
<!-- <view class='goodsName'>
