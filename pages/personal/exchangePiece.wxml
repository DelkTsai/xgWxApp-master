  </view>
</view> -->
<!-- 用户邀请码 -->
<view class='inviteView'>
  <input placeholder='请输入用户邀请码' bindblur="finishInsert" class='inputStyle' value='{{inviteCode}}'></input>
  <!-- 下划线 -->
  <view class='underView'></view>
</view>
<!-- 提交按钮 -->
<view class='submitView'>
  <view class='mainSubmitView' bindtap='sendInvite'>
    <text class='textSubmit'>提交</text>
  </view>
</view>
